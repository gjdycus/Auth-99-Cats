<h1>Log in</h1>

<form action="/session/" method="POST">
  <label for="session_user_name">Username</label>
  <input type="text" name="session[user][user_name]" id="session_user_name">

  <label for="session_user_password">Password</label>
  <input type="password" name="session[user][password]" id="session_user_password">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <input type="submit" value="Log in">

</form>
